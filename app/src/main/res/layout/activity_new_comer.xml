<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adam.pockethourglass.NewComer">

    <TextView
        android:id="@+id/howMuch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="معاك كام؟"
        android:textSize="45dp"
        android:layout_alignBottom="@+id/editTotalMoney"
        android:layout_alignRight="@+id/untilWhen"
        android:layout_alignEnd="@+id/untilWhen" />

    <EditText
        android:id="@+id/editTotalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="68dp"
        android:inputType="numberDecimal"
        android:layout_above="@+id/untilWhen"
        android:layout_toLeftOf="@+id/untilWhen"
        android:layout_alignLeft="@+id/toDateButton"
        android:layout_alignStart="@+id/toDateButton">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/untilWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لغاية امتي؟"
        android:textSize="45dp"
        android:layout_alignBottom="@+id/toDateButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDateButton"
        android:layout_marginBottom="133dp"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_above="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/numberOfDaysView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="45dp"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:layout_below="@+id/untilWhen"
        android:layout_alignLeft="@+id/toDateButton"
        android:layout_alignStart="@+id/toDateButton"
        android:layout_alignRight="@+id/save"
        android:layout_alignEnd="@+id/save"></TextView>

</RelativeLayout>
