<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="فلوسك النهاردة"
        android:id="@+id/todayAllowance"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="23 جنيه"
        android:id="@+id/allowanceText"
        android:textSize="50dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/todayAllowance"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="فلوسك كلها"
        android:id="@+id/totalMoneyText"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/allowanceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="342 جنيه"
        android:id="@+id/totalMoney"
        android:layout_below="@+id/totalMoneyText"
        android:layout_alignRight="@+id/totalMoneyText"
        android:layout_alignEnd="@+id/totalMoneyText"
        android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spend_button"
        android:id="@+id/spendButton"
        android:layout_below="@+id/totalMoney"
        android:layout_alignLeft="@+id/totalMoney"
        android:layout_alignStart="@+id/totalMoney"
        android:layout_marginTop="77dp" />
</RelativeLayout>
